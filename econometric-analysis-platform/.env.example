# Econometric Analysis Platform
# Environment Configuration

# R Configuration
R_HOME=/usr/lib/R
R_LIBS_USER=./renv/library
RENV_ACTIVATE=TRUE

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/econometric_db
# For development, you can use SQLite:
# DATABASE_URL=sqlite:///econometric_data.db

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your_econometric_data_bucket

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
API_PORT=8004

# Statistical Analysis Settings
SIGNIFICANCE_LEVEL=0.05
CONFIDENCE_INTERVAL=0.95
MAX_VARIABLES_IN_MODEL=20
DEFAULT_ESTIMATION_METHOD=ols

# Survey Data Processing
SURVEY_RESPONSE_ENCODING=utf-8
MISSING_VALUE_THRESHOLD=0.3
MIN_SAMPLE_SIZE=30

# Time Series Analysis
DEFAULT_FREQUENCY=monthly
FORECAST_HORIZON_PERIODS=12
SEASONAL_ADJUSTMENT_METHOD=x13

# Model Validation
TRAIN_TEST_SPLIT_RATIO=0.8
CROSS_VALIDATION_FOLDS=10
BOOTSTRAP_ITERATIONS=1000

# Output Settings
PLOT_DPI=300
FIGURE_FORMAT=png
REPORT_FORMAT=html
LATEX_ENGINE=pdflatex

# Performance Settings
PARALLEL_PROCESSING=True
N_CORES=4
MEMORY_LIMIT_GB=8