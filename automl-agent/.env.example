# AutoML Agent
# Environment Configuration

# CrewAI and LangSmith Configuration
LANGSMITH_API_KEY=your_langsmith_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CREWAI_API_KEY=your_crewai_api_key

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1
SAGEMAKER_ROLE_ARN=arn:aws:iam::account:role/SageMakerRole

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
MLFLOW_ARTIFACT_ROOT=s3://your-mlflow-bucket/artifacts

# AutoML Configuration
MAX_TRAINING_TIME_MINUTES=60
CROSS_VALIDATION_FOLDS=5
TEST_SIZE_RATIO=0.2
RANDOM_STATE=42

# Model Selection
ALGORITHMS_TO_TEST=xgboost,lightgbm,catboost,random_forest,svm
HYPEROPT_MAX_EVALS=100
OPTUNA_N_TRIALS=100

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
API_PORT=8003
MAX_FILE_SIZE_MB=500

# Data Processing
FEATURE_SELECTION_METHOD=recursive
SCALING_METHOD=standard
HANDLE_MISSING_METHOD=median

# Deployment Settings
MODEL_REGISTRY_NAME=automl-models
DEPLOYMENT_INSTANCE_TYPE=ml.t3.medium
AUTO_DEPLOY_THRESHOLD_ACCURACY=0.85