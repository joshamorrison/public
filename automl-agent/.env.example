# ===== AUTOML AGENT PLATFORM CONFIGURATION =====
# Advanced Multi-Agent AutoML System Configuration

# ===== API KEYS & AUTHENTICATION =====
# OpenAI API for natural language processing and agent reasoning
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith for agent monitoring and tracing
# Get your key at: https://smith.langchain.com/
LANGCHAIN_TRACING_V2=true
LANGCHAIN_API_KEY=your_langsmith_api_key_here
LANGCHAIN_PROJECT=automl-agent
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# CrewAI for multi-agent orchestration
CREWAI_API_KEY=your_crewai_api_key_here

# Alternative LLM providers (optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Weights & Biases for advanced experiment tracking (optional)
WANDB_API_KEY=your_wandb_api_key_here
WANDB_PROJECT=automl-agent

# ===== AWS CLOUD CONFIGURATION =====
# AWS credentials for SageMaker deployment and S3 storage
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-west-2
SAGEMAKER_ROLE_ARN=arn:aws:iam::account:role/SageMakerRole
AWS_S3_BUCKET=your-automl-bucket

# ===== MLOPS & EXPERIMENT TRACKING =====
# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
MLFLOW_ARTIFACT_ROOT=s3://your-mlflow-bucket/artifacts

# ===== AUTOML CORE SETTINGS =====
# Training and evaluation parameters
MAX_TRAINING_TIME_MINUTES=60
CROSS_VALIDATION_FOLDS=5
TEST_SIZE_RATIO=0.2
VALIDATION_SIZE_RATIO=0.2
RANDOM_STATE=42

# Hyperparameter optimization
HYPEROPT_MAX_EVALS=100
OPTUNA_N_TRIALS=100
RAY_TUNE_MAX_CONCURRENT=4

# Model selection and ensembling
ALGORITHMS_TO_TEST=xgboost,lightgbm,catboost,random_forest,svm,neural_network
ENABLE_MODEL_ENSEMBLING=true
ENSEMBLE_METHODS=voting,stacking,blending

# ===== AGENT CONFIGURATION =====
# Agent behavior settings
ROUTER_AGENT_TEMPERATURE=0.1
EDA_AGENT_MAX_PLOTS=10
FEATURE_AGENT_MAX_FEATURES=100
MODEL_AGENT_EARLY_STOPPING=true

# ===== DATA PROCESSING =====
# Feature engineering and preprocessing
FEATURE_SELECTION_METHOD=recursive_feature_elimination
SCALING_METHOD=standard
HANDLE_MISSING_METHOD=iterative
OUTLIER_DETECTION_METHOD=isolation_forest
MAX_CATEGORICAL_CARDINALITY=50

# Text preprocessing (NLP)
TEXT_MAX_FEATURES=10000
TEXT_NGRAM_RANGE=1,2
TEXT_MIN_DF=2

# Image preprocessing (Computer Vision)
IMAGE_TARGET_SIZE=224,224
IMAGE_AUGMENTATION=true
IMAGE_NORMALIZE=imagenet

# ===== PERFORMANCE & RESOURCE LIMITS =====
# Computational resource limits
MAX_WORKERS=4
MEMORY_LIMIT_GB=8
TIMEOUT_MINUTES=60
ENABLE_GPU=false
GPU_MEMORY_LIMIT_GB=4

# ===== API & WEB INTERFACE =====
# FastAPI server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
MAX_FILE_SIZE_MB=500

# Streamlit interface
STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# ===== DATABASE CONFIGURATION =====
# Database connection for model registry and experiment storage
DATABASE_URL=postgresql://user:password@localhost:5432/automl_db
MODEL_REGISTRY_NAME=automl-models

# ===== LOGGING & MONITORING =====
# Logging configuration
DEBUG=false
LOG_LEVEL=INFO
LOG_FILE=logs/automl_agent.log
ENABLE_STRUCTURED_LOGGING=true

# Performance monitoring
ENABLE_PROFILING=false
PROMETHEUS_PORT=9090

# ===== DEPLOYMENT SETTINGS =====
# Model deployment configuration
AUTO_DEPLOY_THRESHOLD_ACCURACY=0.85
DEPLOYMENT_INSTANCE_TYPE=ml.t3.medium
DEPLOYMENT_MIN_INSTANCES=1
DEPLOYMENT_MAX_INSTANCES=10

# ===== FEATURE FLAGS =====
# Enable/disable specific capabilities
ENABLE_DEEP_LEARNING=true
ENABLE_NLP_AGENTS=true
ENABLE_COMPUTER_VISION_AGENTS=true
ENABLE_TIME_SERIES_AGENTS=true
ENABLE_RECOMMENDATION_AGENTS=true
ENABLE_CLUSTERING_AGENTS=true
ENABLE_HYPERPARAMETER_TUNING=true
ENABLE_AUTO_FEATURE_ENGINEERING=true
ENABLE_MODEL_INTERPRETATION=true

# ===== DEVELOPMENT & DEBUGGING =====
# Development settings
CACHE_MODELS=true
SAVE_INTERMEDIATE_RESULTS=true
ENABLE_MODEL_CARDS=true
GENERATE_REPORTS=true
INTERACTIVE_MODE=false