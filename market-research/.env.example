# Market Research Assistant
# Environment Configuration

# LangGraph Configuration
LANGCHAIN_API_KEY=your_langchain_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google ADK Configuration
GOOGLE_API_KEY=your_google_api_key
GOOGLE_CSE_ID=your_custom_search_engine_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service_account.json

# MCP Configuration
MCP_SERVER_URL=localhost:3000
MCP_API_KEY=your_mcp_api_key

# Web Scraping Configuration
USER_AGENT=MarketResearchBot/1.0
REQUEST_DELAY_SECONDS=2
MAX_CONCURRENT_REQUESTS=5

# Data Sources
CRUNCHBASE_API_KEY=your_crunchbase_api_key
LINKEDIN_API_KEY=your_linkedin_api_key
PITCHBOOK_API_KEY=your_pitchbook_api_key

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
API_PORT=8002

# Research Parameters
MAX_COMPANIES_PER_SEARCH=50
RESEARCH_DEPTH_LEVEL=3
LEAD_SCORING_THRESHOLD=0.7

# Output Settings
REPORT_FORMAT=pdf
OUTPUT_DIRECTORY=./reports
INCLUDE_CHARTS=True

# Rate Limiting
REQUESTS_PER_MINUTE=60
DAILY_REQUEST_LIMIT=5000