# LangChain Configuration
LANGCHAIN_API_KEY=your_langsmith_key
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=market-customer-intelligence

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDINGS_MODEL=text-embedding-3-large

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_key

# ChromaDB Configuration
CHROMA_DB_PATH=./chroma_db
CHROMA_HOST=localhost
CHROMA_PORT=8000
CHROMA_COLLECTION_CUSTOMER_FEEDBACK=customer_feedback
CHROMA_COLLECTION_MARKET_DATA=market_data
CHROMA_COLLECTION_COMPETITOR_INTEL=competitor_intel

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=market-intelligence-data

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/market_intelligence
REDIS_URL=redis://localhost:6379/0

# Social Media APIs
TWITTER_BEARER_TOKEN=your_twitter_bearer_token
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_secret
REDDIT_USER_AGENT=your_app_name

# Review Platform APIs
GOOGLE_PLACES_API_KEY=your_google_places_key
YELP_API_KEY=your_yelp_api_key
TRUSTPILOT_API_KEY=your_trustpilot_key
G2_API_KEY=your_g2_api_key

# Competitive Intelligence APIs
SIMILAR_WEB_API_KEY=your_similarweb_key
BUILT_WITH_API_KEY=your_builtwith_key
CRUNCHBASE_API_KEY=your_crunchbase_key

# Web Scraping Configuration
SELENIUM_GRID_URL=http://localhost:4444/wd/hub
SCRAPING_DELAY_SECONDS=2
MAX_CONCURRENT_REQUESTS=5
USER_AGENT=Mozilla/5.0 (compatible; MarketIntel/1.0)

# Sentiment Analysis Configuration
SENTIMENT_MODEL=cardiffnlp/twitter-roberta-base-sentiment-latest
EMOTION_MODEL=j-hartmann/emotion-english-distilroberta-base
LANGUAGE_DETECTION_THRESHOLD=0.8

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Monitoring Configuration
LOG_LEVEL=INFO
PROMETHEUS_PORT=8001
ALERT_THRESHOLD_SENTIMENT=-0.5
ALERT_THRESHOLD_VOLUME=1000

# Task Queue Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_WORKER_CONCURRENCY=4

# Data Processing Configuration
BATCH_SIZE=1000
EMBEDDING_BATCH_SIZE=100
MAX_TEXT_LENGTH=2000
MIN_TEXT_LENGTH=10

# Real-time Processing
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_FEEDBACK=customer_feedback
KAFKA_TOPIC_MARKET_DATA=market_data

# Storage Configuration
LOCAL_STORAGE_PATH=./data/
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
RETENTION_DAYS=365

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key
API_RATE_LIMIT=1000/hour

# Environment
ENVIRONMENT=development
DEBUG=True