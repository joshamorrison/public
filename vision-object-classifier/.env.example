# Vision Object Classifier Configuration
# Copy this file to .env and customize the values for your setup

# =============================================================================
# KAGGLE API CONFIGURATION (Optional but Recommended)
# =============================================================================

# Kaggle API credentials for downloading dish cleanliness datasets
# Get your API key from: https://www.kaggle.com/account
# Required for downloading "Cleaned vs Dirty" competition datasets
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================

# Default model to use for training and inference
# Options: custom_cnn, resnet50, efficientnet_b0, mobilenet_v3
DEFAULT_MODEL=custom_cnn

# Device preference (auto-detects GPU if available)
# Options: auto, cpu, cuda
DEVICE=auto

# =============================================================================
# TRAINING CONFIGURATION
# =============================================================================

# Training hyperparameters optimized for local development
LEARNING_RATE=0.001
BATCH_SIZE=8
NUM_EPOCHS=20
TEST_SPLIT=0.2

# Memory optimization for local training (prevents timeouts)
MEMORY_EFFICIENT_MODE=true
MAX_BATCHES_PER_EPOCH=15

# =============================================================================
# SYNTHETIC DATA GENERATION
# =============================================================================

# Number of dirty variations to generate per clean image
SYNTHETIC_VARIATIONS=5

# Data balancing (helps achieve better accuracy)
AUTO_BALANCE_DATASET=true
TARGET_CLEAN_TO_DIRTY_RATIO=1:2

# =============================================================================
# DATA DIRECTORIES
# =============================================================================

# Core data directories
DATA_DIR=data
CLEAN_DIR=data/clean
DIRTY_DIR=data/dirty
MODEL_DIR=models
RESULTS_DIR=results

# =============================================================================
# INFERENCE CONFIGURATION
# =============================================================================

# Default model for predictions (set after training)
DEFAULT_MODEL_PATH=models/final_balanced_model.pth
DEFAULT_CONFIG_PATH=models/balanced_config.json

# Batch processing settings
INFERENCE_BATCH_SIZE=32
OUTPUT_FORMAT=both

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable debug mode with additional logging
DEBUG_MODE=false

# Reproducible results
RANDOM_SEED=42