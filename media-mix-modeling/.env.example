# ===== MEDIA MIX MODELING & OPTIMIZATION PLATFORM =====
# Copy this file to .env and update with your actual values

# ===== CORE CONFIGURATION =====
PROJECT_NAME=media-mix-modeling
ENVIRONMENT=development
LOG_LEVEL=INFO

# ===== DATA SOURCES =====
# Kaggle API (Enterprise Marketing Datasets)
KAGGLE_USERNAME=your_kaggle_username_here
KAGGLE_KEY=your_kaggle_api_key_here

# HuggingFace Datasets
HF_TOKEN=your_huggingface_token_here

# ===== MACHINE LEARNING =====
# MLflow Configuration
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=media-mix-modeling

# ===== DBT INTEGRATION =====
# Modern data stack transformation
DBT_PROFILES_DIR=./dbt_profiles
DBT_PROJECT_DIR=./dbt_project
DBT_DATABASE_URL=sqlite:///mmm_warehouse.db

# ===== CLOUD & DEPLOYMENT =====
# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# ===== APACHE AIRFLOW =====
AIRFLOW_DATABASE_URL=postgresql://airflow:password@localhost:5432/airflow
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=your_airflow_password_here

# ===== R INTEGRATION =====
R_HOME=C:\Program Files\R\R-4.3.0
R_PACKAGES_REQUIRED=forecast,vars,urca,bsts

# ===== MEDIA PLATFORM APIS =====
# Google Ads API
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_developer_token
GOOGLE_ADS_CLIENT_ID=your_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=your_google_ads_client_secret

# Facebook Marketing API
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token

# ===== PORTFOLIO VALIDATION =====
TARGET_ROAS_IMPROVEMENT=0.18
TARGET_CAC_REDUCTION=0.12
TARGET_MODEL_ACCURACY=0.85