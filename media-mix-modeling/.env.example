# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# SageMaker Configuration
SAGEMAKER_EXECUTION_ROLE=arn:aws:iam::123456789012:role/SageMakerExecutionRole
SAGEMAKER_INSTANCE_TYPE=ml.m5.xlarge
SAGEMAKER_INSTANCE_COUNT=1

# MLflow Configuration
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT_NAME=media-mix-modeling
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/media_mix_db
REDSHIFT_ENDPOINT=your-redshift-cluster.amazonaws.com
REDSHIFT_DATABASE=media_analytics
REDSHIFT_USER=your_username
REDSHIFT_PASSWORD=your_password

# Airflow Configuration
AIRFLOW_HOME=/opt/airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql://airflow:airflow@localhost:5432/airflow

# Data Sources
GOOGLE_ADS_DEVELOPER_TOKEN=your_google_ads_token
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# Model Configuration
MODEL_UPDATE_FREQUENCY=daily
OPTIMIZATION_HORIZON_DAYS=90
MIN_BUDGET_THRESHOLD=1000

# Monitoring and Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_FROM=alerts@yourcompany.com
EMAIL_PASSWORD=your_email_password

# Environment
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=True